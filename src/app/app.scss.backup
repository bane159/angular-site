// Stack Overflow inspired layout styles
.sidebar {
  background-color: #f8f9fa;
  min-height: calc(100vh - 60px);
  border-right: 1px solid #dee2e6;
  
  .nav-link {
    color: #6c757d;
    padding: 8px 16px;
    border-radius: 4px;
    
    &:hover {
      background-color: #e9ecef;
      color: #495057;
    }
    
    &.active {
      background-color: #ffeaa7;
      color: #2d3748;
      font-weight: 600;
    }
    
    i {
      width: 16px;
      margin-right: 8px;
    }
  }
  
  .sidebar-heading {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.5px;
    padding: 0 16px;
  }
}

.main-content {
  padding: 20px;
  
  .question-stats {
    font-size: 13px;
  }
  
  .filter-tabs {
    .nav-pills .nav-link {
      color: #6c757d;
      border-radius: 4px;
      margin-right: 4px;
      padding: 8px 12px;
      
      &:hover {
        background-color: #e9ecef;
      }
      
      &.active {
        background-color: #0d6efd;
        color: white;
      }
    }
  }
}

.questions-list {
  .question-item {
    &:hover {
      background-color: #f8f9fa;
    }
  }
  
  .question-stats-col {
    .stat-item {
      margin-bottom: 8px;
      
      .stat-number {
        display: block;
        font-weight: 600;
        font-size: 14px;
        padding: 4px 8px;
        border-radius: 3px;
        
        &.bg-success {
          color: white !important;
        }
      }
      
      .stat-label {
        display: block;
        font-size: 11px;
        color: #6c757d;
      }
    }
    
    .bounty-badge {
      background-color: #0d6efd;
      color: white;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: 600;
      margin-top: 8px;
      display: inline-block;
    }
  }
  
  .question-title {
    font-size: 17px;
    line-height: 1.3;
    margin-bottom: 8px;
    
    a {
      color: #0074cc;
      
      &:hover {
        color: #0056b3;
      }
    }
  }
  
  .question-excerpt {
    font-size: 13px;
    line-height: 1.4;
    margin-bottom: 8px;
  }
  
  .question-tags {
    .badge {
      font-size: 11px;
      padding: 4px 6px;
      background-color: #e1ecf4 !important;
      color: #39739d !important;
      border-radius: 3px;
    }
  }
  
  .question-meta {
    font-size: 12px;
    
    .user-link {
      color: #0074cc;
      text-decoration: none;
      
      &:hover {
        color: #0056b3;
      }
    }
    
    .reputation {
      color: #6c757d;
      font-weight: 600;
    }
  }
}

.right-sidebar {
  padding: 20px 15px;
  
  .sidebar-section {
    .sidebar-title {
      font-size: 13px;
      font-weight: 600;
      border-radius: 4px 4px 0 0;
      border: 1px solid #dee2e6;
      border-bottom: none;
    }
    
    .sidebar-content {
      border-radius: 0 0 4px 4px;
      border-top: none;
      background-color: white;
      
      .blog-item, .meta-item {
        a {
          color: #0074cc;
          font-size: 13px;
          
          &:hover {
            color: #0056b3;
          }
        }
      }
      
      .collective-item {
        .badge {
          width: 24px;
          height: 24px;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 10px;
          font-weight: 600;
        }
        
        .fw-bold {
          font-size: 13px;
        }
      }
    }
  }
}

// Footer Styles
.footer {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  color: #ecf0f1;
  margin-top: 4rem;
  border-top: 3px solid #ff6a00;
  
  .footer-brand {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    font-weight: 800;
  }
  
  .footer-description {
    color: #bdc3c7;
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .footer-heading {
    color: #ff6a00;
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: 1.2rem;
    border-bottom: 2px solid #ff6a00;
    padding-bottom: 0.5rem;
    display: inline-block;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    
    li {
      margin-bottom: 0.7rem;
    }
  }
  
  .footer-link {
    color: #bdc3c7;
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    display: inline-block;
    
    &:hover {
      color: #ff6a00;
      text-decoration: none;
      transform: translateX(5px);
    }
  }
  
  // Social Media Links
.social-link {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 45px;
      height: 45px;
      background: linear-gradient(135deg, #3498db, #2980b9);
      color: #fff;
      border-radius: 50%;
      text-decoration: none;
      transition: all 0.4s ease;

      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
      
      &:hover {
        background: linear-gradient(135deg, #ff6a00, #e85a00);
        transform: translateY(-3px) scale(1.1);
        box-shadow: 0 8px 25px rgba(255, 106, 0, 0.4);
      }
      
      &:nth-child(1) { background: linear-gradient(135deg, #3b5998, #2d4373); }
      &:nth-child(2) { background: linear-gradient(135deg, #1da1f2, #0d8bd9); }
      &:nth-child(3) { background: linear-gradient(135deg, #0077b5, #005582); }
      &:nth-child(4) { background: linear-gradient(135deg, #333, #24292e); }
      &:nth-child(5) { background: linear-gradient(135deg, #7289da, #5b6eae); }
      &:nth-child(6) { background: linear-gradient(135deg, #ff0000, #cc0000); }
      
      i {
        font-size: 1.2rem;
      }
    }
  
  // Account Section
  .account-section {
    .auth-buttons {
      .btn {
        font-size: 0.9rem;
        padding: 0.7rem 1.5rem;
        border: 2px solid #ff6a00;
        background: transparent;
        color: #ff6a00;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        
        &:hover {
          background: linear-gradient(135deg, #ff6a00, #e85a00);
          border-color: #ff6a00;
          color: #fff;
          transform: translateY(-2px);
          box-shadow: 0 6px 20px rgba(255, 106, 0, 0.3);
        }
      }
    }
  }
  
  // Bottom Footer
  .footer-bottom {
    background-color: rgba(0,0,0,0.2);
    border-top: 1px solid rgba(255, 106, 0, 0.3);
    margin-top: 2rem;
    
    .footer-copyright {
      color: #bdc3c7;
      font-size: 0.9rem;
    }
    
    .footer-meta {
      color: #95a5a6;
      font-size: 0.85rem;
      
      .footer-version {
        font-weight: 600;
        color: #ff6a00;
      }
    }
    
    .footer-link-inline {
      color: #bdc3c7;
      text-decoration: none;
      transition: color 0.3s ease;
      
      &:hover {
        color: #ff6a00;
      }
    }
  }
}

// Mobile responsiveness
@media (max-width: 767px) {
  .main-content {
    padding: 15px;
  }
  
  .right-sidebar {
    padding: 15px;
    order: -1 !important;
  }
  
  .question-stats-col {
    .stat-item {
      margin-bottom: 4px;
      
      .stat-number, .stat-label {
        font-size: 11px !important;
      }
    }
    
    .bounty-badge {
      font-size: 10px !important;
      padding: 2px 6px !important;
    }
  }
  
  .question-title {
    font-size: 15px !important;
  }
  
  .question-excerpt {
    font-size: 12px !important;
  }
  
  .filter-tabs {
    .nav-pills .nav-link {
      padding: 6px 8px;
      font-size: 12px;
    }
  }
  
  .footer {
    .social-links {
      text-align: center;
      margin-bottom: 2rem;
      
      .social-link {
        width: 40px;
        height: 40px;
        margin: 0.2rem;
      }
    }
    
    .account-section {
      text-align: center;
      
      .auth-buttons {
        .btn {
          display: block;
          width: 100%;
          margin-bottom: 0.8rem;
          
          &:last-child {
            margin-bottom: 0;
          }
        }
      }
    }
    
    .footer-bottom {
      text-align: center;
      
      .col-md-6 {
        text-align: center !important;
        margin-bottom: 1rem;
        
        &:last-child {
          margin-bottom: 0;
        }
      }
    }
  }
}

@media (max-width: 575px) {
  .container-fluid {
    padding: 0;
  }
  
  .main-content, .right-sidebar {
    padding: 10px;
  }
  
  .question-item {
    .row {
      margin: 0;
    }
    
    .col-3, .col-9 {
      padding: 0 8px;
    }
  }

}
